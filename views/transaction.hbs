<!DOCTYPE html>
<html lang="en">

<head>
    {{> head}}
    <title>Add Transaction</title>
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="/css/transaction.css">
</head>

<body>
    <div class="main-container">
        <!-- Header -->
        <header class="app-header">
            <h1 class="page-title">üìù Add Transaction</h1>
            <div class="user-info" onclick="toggleMenu()">
                <span class="username">{{username}}</span>
                <span class="avatar">{{avatar}}</span>
            </div>
            <div id="userMenu" class="user-menu">
                <a href="/profile">Edit Profile</a>
                <a href="/logout" class="logout">Logout</a>
            </div>
        </header>

        <input type="hidden" id="currentUsername" value="{{username}}">
        <form id="transactionForm">
            <input type="hidden" id="transactionId" name="transactionId">

            <!-- 1. Expense Type -->
            <div class="form-section">
                <div class="section-label"><span>üè∑Ô∏è</span> Expense Type</div>
                <div class="option-grid">
                    {{#each (split "Eat,Snack,Groceries,Laundry,Bensin,Flazz,Home Appliance,Jumat Berkah,Uang
                    Sampah,Uang Keamanan,Medicine,Others")}}
                    <label>
                        <input type="radio" name="type" value="{{this}}" class="option-input" required>
                        <div class="icon-btn">
                            <span class="emoji-icon">{{getEmoji this}}</span>
                            <span class="label-text">{{this}}</span>
                        </div>
                    </label>
                    {{/each}}
                </div>
            </div>

            <!-- 2. Notes -->
            <div class="form-section">
                <div class="section-label"><span>üìù</span> Description</div>
                <div class="md-text-field">
                    <input type="text" id="ngapain" name="ngapain" placeholder=" " required>
                    <label for="ngapain">What did you buy?</label>
                </div>
            </div>

            <!-- 3. Amount -->
            <div class="form-section">
                <div class="section-label"><span>üíµ</span> Amount</div>
                <div class="amount-card">
                    <div class="amount-wrapper">
                        <span class="amount-prefix">Rp</span>
                        <input type="number" id="amount" name="amount" class="amount-input-styled" placeholder="0"
                            required>
                    </div>
                </div>
            </div>

            <!-- 4. Pocket -->
            <div class="form-section">
                <div class="section-label"><span>üëõ</span> Pocket Source</div>
                <div class="option-grid">
                    {{#each (split "Kwintals,Groceries,Weekday Transport,Weekend Transport,Investasi,Dana
                    Darurat,IPL")}}
                    <label>
                        <input type="radio" name="pocket" value="{{this}}" class="option-input" required>
                        <div class="icon-btn">
                            <span class="emoji-icon">{{getPocketEmoji this}}</span>
                            <span class="label-text">{{this}}</span>
                        </div>
                    </label>
                    {{/each}}
                </div>
            </div>

            <!-- 5. Date Time -->
            <div class="form-section">
                <div class="section-label"><span>üìÖ</span> Date & Time</div>
                <div class="md-text-field">
                    <input type="datetime-local" id="date" name="date" required>
                </div>
            </div>

            <!-- Sticky Submit Button -->
            <div class="sticky-footer">
                <button type="submit" class="md-btn filled md-btn-block submit-btn" id="submitBtn">
                    Save Transaction
                </button>
            </div>
        </form>
    </div>

    <div id="message"></div>
    <script src="/js/common.js"></script>
    <script src="/js/transaction.js"></script>
    <script>
        window.addEventListener('load', () => {
            if (!document.getElementById('transactionId').value) {
                const now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                document.getElementById('date').value = now.toISOString().slice(0, 16);
            }
        });
    </script>

    {{> navbar isTransaction=true}}
</body>

</html>