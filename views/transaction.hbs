<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
    <title>Money Journal - Add Transaction</title>
</head>
<body>
    <header class="md-top-app-bar">
        <h1 class="app-bar-title">Add Transaction</h1>
        <div class="d-flex align-center gap-2">
            <span class="md-subhead" style="margin-right: 8px;">{{username}}</span>
            <a href="/logout" class="md-btn text" style="color: var(--md-sys-color-error);">
                <span class="material-symbols-outlined">logout</span>
            </a>
        </div>
    </header>

    <div class="main-container">
        <div class="md-card" style="max-width: 600px; margin: 24px auto;">
            <div class="md-card-header">
                <h2 class="md-headline">New Entry</h2>
                <p class="md-subhead">Track your expenses</p>
            </div>

            <form id="transactionForm">
                <input type="hidden" id="transactionId" name="transactionId">
                
                <!-- Category Chips -->
                <div class="mb-4">
                    <label class="md-subhead" style="display:block; margin-bottom:8px; font-weight:500;">Category</label>
                    <div class="chip-group">
                        <label class="md-chip">
                            <input type="radio" name="type" value="rumah" required>
                            <span class="material-symbols-outlined" style="font-size:18px; margin-right:6px;">home</span>
                            Rumah
                        </label>
                        <label class="md-chip">
                            <input type="radio" name="type" value="kerja" required>
                            <span class="material-symbols-outlined" style="font-size:18px; margin-right:6px;">work</span>
                            Kerja
                        </label>
                        <label class="md-chip">
                            <input type="radio" name="type" value="pacaran" required>
                            <span class="material-symbols-outlined" style="font-size:18px; margin-right:6px;">favorite</span>
                            Pacaran
                        </label>
                        <label class="md-chip">
                            <input type="radio" name="type" value="personal" required>
                            <span class="material-symbols-outlined" style="font-size:18px; margin-right:6px;">person</span>
                            Personal
                        </label>
                    </div>
                </div>

                <div class="md-text-field">
                    <input type="datetime-local" id="date" name="date" placeholder=" " required>
                    <label for="date">Date & Time</label>
                </div>

                <div class="md-text-field">
                    <input type="text" id="ngapain" name="ngapain" placeholder=" " required>
                    <label for="ngapain">Description (e.g. Lunch)</label>
                </div>

                <div class="md-text-field">
                    <input type="number" id="amount" name="amount" placeholder=" " required>
                    <label for="amount">Amount (Rp)</label>
                </div>
                <div id="formatted" class="md-headline" style="color: var(--md-sys-color-primary); margin-bottom: 24px;"></div>

                <button type="submit" class="md-btn filled md-btn-block" id="submitBtn">
                    <span class="material-symbols-outlined">save</span>
                    <span id="btnText">Save Transaction</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Floating Action Button to View History -->
    <a href="/transactions" class="md-fab" title="View History">
        <span class="material-symbols-outlined">list_alt</span>
    </a>

    <div id="message"></div>

    <script src="/js/transaction.js"></script>
    <script>
        // Inline chip selection logic
        document.querySelectorAll('.md-chip input').forEach(input => {
            input.addEventListener('change', () => {
                document.querySelectorAll('.md-chip').forEach(chip => chip.classList.remove('selected'));
                if(input.checked) input.parentElement.classList.add('selected');
            });
        });
    </script>
</body>
</html>