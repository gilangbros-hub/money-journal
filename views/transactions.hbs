<!DOCTYPE html>
<html lang="en">

<head>
    {{> head}}
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2"></script>
</head>

<body>
    <div class="main-container">
        <!-- Header -->
        <header class="app-header">
            <h1 class="page-title">üìä Dashboard</h1>
            <div class="user-info" onclick="toggleMenu()">
                <span class="username">{{username}}</span>
                <span class="avatar">{{avatar}}</span>
            </div>
            <div id="userMenu" class="user-menu">
                <a href="/profile">Edit Profile</a>
                <a href="/logout" class="logout">Logout</a>
            </div>
        </header>

        <!-- Summary Card -->
        <div class="summary-card">
            <input type="month" id="monthFilter" class="month-selector">
            <div class="total-spent-label">Total Expenses</div>
            <h1 class="total-spent-amount" id="totalAmount">Rp 0</h1>
            <!-- Optional: Add a small progress bar or target here later -->
        </div>

        <!-- Categories Section -->
        <div class="section-header">
            <h2 class="section-title">Spending by Category</h2>
        </div>
        <div class="category-list" id="categoryList">
            <!-- Injected by JS -->
            <p style="text-align:center; color:#9CA3AF;">Loading categories...</p>
        </div>

        <!-- Recent Transactions -->
        <div class="section-header">
            <h2 class="section-title" id="recentTransactionsHeader">Recent Transactions</h2>
            <button onclick="exportToCSV()" class="md-btn text"
                style="min-width:auto; padding:0; color: #10B981; font-size: 14px;">Export</button>
        </div>

        <div class="transaction-list-mini" id="historyList">
            <!-- Injected by JS -->
        </div>

    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <div style="font-size: 48px; margin-bottom: 16px;">üóëÔ∏è</div>
            <h3>Delete this?</h3>
            <p id="deleteDetails" style="color: #6B7280; margin-bottom: 20px;"></p>
            <div class="modal-actions">
                <button class="btn-cancel" onclick="closeDeleteModal()">Cancel</button>
                <button class="btn-save" style="background: #EF4444;" onclick="confirmDelete()">Delete</button>
            </div>
        </div>
    </div>

    <script src="/js/common.js"></script>
    <script src="/js/transactions.js"></script>

    {{> navbar isDashboard=true}}
</body>

</html>