<!DOCTYPE html>
<html lang="en">
<head>
    {{> head}}
    <title>Money Journal - History</title>
</head>
<body>
    <header class="md-top-app-bar">
        <div class="d-flex align-center gap-2">
            <a href="/transaction" class="md-btn text" style="min-width: auto; padding: 0 8px;">
                <span class="material-symbols-outlined">arrow_back</span>
            </a>
            <h1 class="app-bar-title">History</h1>
        </div>
        <div class="d-flex align-center gap-2">
            <span class="md-subhead">{{username}}</span>
        </div>
    </header>

    <div class="main-container">
        <!-- Filters Card -->
        <div class="md-card outlined mb-4">
            <div class="md-card-header">
                <h2 class="md-headline" style="font-size: 20px;">Filters</h2>
            </div>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
                <div class="md-text-field" style="margin-bottom: 0;">
                    <input type="month" id="monthFilter" placeholder=" ">
                    <label for="monthFilter">Month</label>
                </div>
                <div class="md-text-field" style="margin-bottom: 0;">
                    <select id="typeFilter">
                        <option value="all">All Categories</option>
                        <option value="rumah">üè† Rumah</option>
                        <option value="kerja">üíº Kerja</option>
                        <option value="pacaran">‚ù§Ô∏è Pacaran</option>
                        <option value="personal">üë§ Personal</option>
                    </select>
                    <label for="typeFilter">Category</label>
                </div>
                <div class="md-text-field" style="margin-bottom: 0;">
                    <select id="byFilter">
                        <option value="all">All Users</option>
                    </select>
                    <label for="byFilter">Submitter</label>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px; margin-bottom: 24px;">
            <div class="md-card">
                <p class="md-subhead">Total Transactions</p>
                <h2 class="md-headline" id="totalCount">0</h2>
            </div>
            <div class="md-card" style="background-color: var(--md-sys-color-primary-container);">
                <p class="md-subhead" style="color: var(--md-sys-color-on-primary-container);">Total Amount</p>
                <h2 class="md-headline" id="totalAmount" style="color: var(--md-sys-color-on-primary-container);">Rp 0</h2>
            </div>
        </div>

        <!-- Transactions Table -->
        <div class="md-table-container">
            <table class="md-table" id="transactionsTable">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>By</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <tr><td colspan="6" class="text-center">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Confirmation Dialog (Modal) -->
    <div id="deleteModal" style="display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.5); z-index: 2000; align-items: center; justify-content: center;">
        <div class="md-card" style="width: 100%; max-width: 320px;">
            <h3 class="md-headline" style="font-size: 24px;">Delete?</h3>
            <p class="md-subhead">This cannot be undone.</p>
            <p id="deleteDetails" style="margin: 16px 0; font-size: 14px;"></p>
            <div class="d-flex justify-between mt-4">
                <button class="md-btn text" onclick="closeDeleteModal()">Cancel</button>
                <button class="md-btn filled" style="background-color: var(--md-sys-color-error); color: var(--md-sys-color-on-error);" onclick="confirmDelete()">Delete</button>
            </div>
        </div>
    </div>
    
    <!-- Add FAB -->
    <a href="/transaction" class="md-fab" title="Add Transaction">
        <span class="material-symbols-outlined">add</span>
    </a>

    <div id="message"></div>

    <script src="/js/transactions.js"></script>
    <script>
        // Simple modal logic if not present in js
        function showDeleteModal(id) {
             document.getElementById('deleteModal').style.display = 'flex';
        }
    </script>
</body>
</html>